{
    "apiBrowser": {
        "uri": "/api-browser",
        "showHiddenKey": "hidden"
    },
    "definitionsDirectory": "%DOCUMENT_ROOT%/definitions/",
    "controllers": [
        {
            "name": "Api",
            "endpoints": [
                {
                    "uri": "/api",
                    "mapFile": "api",
                    "class": "\\MS\\RestServer\\Server\\Controllers\\Api"
                }
            ]
        },
        {
            "name": "Test",
            "endpoints": [
                {
                    "uri": "/test",
                    "mapFile": "test",
                    "class": "\\MS\\RestServer\\Server\\Controllers\\Test"
                }
            ]
        }
    ],
    "localization": {
        "defaultLanguage": "pl_PL",
        "languages": [
            {
                "code": "pl_PL",
                "directory": "%DOCUMENT_ROOT%/locale/pl_PL/"
            },
            {
                "code": "en_GB",
                "directory": "%DOCUMENT_ROOT%/locale/en_GB/"
            }
        ]
    },
    "obfuscator": {
        "enabled": true,
        "userDependent": true,
        "keyFile": "%DOCUMENT_ROOT%/keys/obfuscator.key",
        "vectorFile": "%DOCUMENT_ROOT%/keys/obfuscator.vector",
        "cipher": "aes-256-ctr"
    }
}
